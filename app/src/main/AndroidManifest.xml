<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ball">

    <uses-permission android:name="android.permission.VIBRATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".feature.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SettingsActivityStyle"/>
        <activity android:name=".feature.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MainActivityStyle"/>
        <activity android:name=".feature.LoadingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/LoadingActivityStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>